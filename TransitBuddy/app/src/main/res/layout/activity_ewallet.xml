<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Top background image -->
    <ImageView
        android:id="@+id/bgImage"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:scaleType="center"
        android:src="@drawable/bgtop" />

    <!-- Back button -->
    <ImageButton
        android:id="@+id/back"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_margin="10dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/baseline_chevron_left_24"
        app:tint="@android:color/white" />

    <!-- Page title -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/red_hat_display_bold"
        android:text="Cash-In"
        android:textSize="23sp"
        android:layout_centerHorizontal="true"
        android:textColor="#f8f8f8"
        android:layout_marginTop="22dp" />

    <!-- Info button -->
    <ImageButton
        android:id="@+id/information"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_margin="10dp"
        android:layout_alignParentEnd="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/outline_info_24"
        app:tint="@android:color/white"/>

    <!-- E-wallets with Instapay label -->
    <TextView
        android:id="@+id/e_wallets_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleText"
        android:layout_marginTop="65dp"
        android:layout_marginStart="24dp"
        android:text="E-wallets with InstaPay"
        android:fontFamily="@font/red_hat_display_bold"
        android:textColor="#343341"
        android:textSize="24dp" />

    <!-- Subtitle text -->
    <TextView
        android:id="@+id/e_wallets_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/e_wallets_label"
        android:layout_marginTop="8dp"
        android:layout_marginStart="24dp"
        android:text="Cash in with your E-wallets like GCash or Maya"
        android:fontFamily="@font/red_hat_display_regualr"
        android:textColor="#7a7a7a"
        android:textSize="14sp" />

    <!-- Section for e-wallet buttons -->
    <LinearLayout
        android:id="@+id/ewallet_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/e_wallets_subtitle"
        android:layout_marginTop="40dp"
        android:orientation="vertical">

        <!-- GCash Button -->
        <LinearLayout
            android:id="@+id/gcash_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:orientation="horizontal"
            android:paddingVertical="24dp"
            android:paddingHorizontal="28dp"
            android:layout_marginBottom="20dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/gcash"
                app:tint="@null" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:text="GCash"
                android:fontFamily="@font/red_hat_display_bold"
                android:textSize="20sp"
                android:textColor="#343341" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:src="@drawable/baseline_chevron_right_24"
                app:tint="#343341" />
        </LinearLayout>

        <!-- Maya Button -->
        <LinearLayout
            android:id="@+id/maya_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingVertical="24dp"
            android:paddingHorizontal="28dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/maya"
                app:tint="@null" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:fontFamily="@font/red_hat_display_bold"
                android:text="Maya"
                android:textColor="#343341"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/baseline_chevron_right_24"
                app:tint="#343341" />
        </LinearLayout>

    </LinearLayout>

    <!-- Footer Section -->
    <LinearLayout
        android:id="@+id/footerContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical|center_horizontal">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/outline_info_24"
            app:tint="#4D4D4D" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Never share your PINs with anyone"
            android:textSize="12sp"
            android:textColor="#4D4D4D" />
    </LinearLayout>

</RelativeLayout>

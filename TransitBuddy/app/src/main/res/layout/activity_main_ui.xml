<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signupbg"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Welcome"
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        android:textStyle="bold"
        android:fontFamily="@font/red_hat_display_bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvWelcome"
        app:layout_constraintBottom_toTopOf="@id/btnSignOut">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/btnTransfer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Transfer"
                android:textColor="#FFFFFF"
                android:backgroundTint="#343341"
                android:padding="16dp"
                android:textSize="16sp"
                android:fontFamily="@font/red_hat_display_bold"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="16dp" />

            <Button
                android:id="@+id/btnReceive"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Receive"
                android:textColor="#FFFFFF"
                android:backgroundTint="#343341"
                android:padding="16dp"
                android:textSize="16sp"
                android:fontFamily="@font/red_hat_display_bold"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="16dp" />

            <Button
                android:id="@+id/btnProfile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Profile"
                android:textColor="#FFFFFF"
                android:backgroundTint="#343341"
                android:padding="16dp"
                android:textSize="16sp"
                android:fontFamily="@font/red_hat_display_bold"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="16dp" />

            <Button
                android:id="@+id/btnLandmarks"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Landmarks"
                android:textColor="#FFFFFF"
                android:backgroundTint="#343341"
                android:padding="16dp"
                android:textSize="16sp"
                android:fontFamily="@font/red_hat_display_bold"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="16dp" />

            <Button
                android:id="@+id/btnStations"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Stations"
                android:textColor="#FFFFFF"
                android:backgroundTint="#343341"
                android:padding="16dp"
                android:textSize="16sp"
                android:fontFamily="@font/red_hat_display_bold"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="16dp" />

            <Button
                android:id="@+id/btnLoadBalance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Load Balance"
                android:textColor="#FFFFFF"
                android:backgroundTint="#343341"
                android:padding="16dp"
                android:textSize="16sp"
                android:fontFamily="@font/red_hat_display_bold"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="16dp" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnSignOut"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Sign Out"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FF4444"
        android:padding="16dp"
        android:textSize="16sp"
        android:fontFamily="@font/red_hat_display_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8" />

</androidx.constraintlayout.widget.ConstraintLayout> 